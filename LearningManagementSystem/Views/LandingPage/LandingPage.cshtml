        <div class="text-center">
            <h6 class="section-title bg-white text-center text-primary px-3">Courses</h6>
            <h1 class="mb-5">Popular Courses</h1>
        </div>

        <ul class="nav nav-pills justify-content-center mb-4" id="courseTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link @(type == "Popular" ? "active" : "")"
                   asp-controller="LandingPage"
                   asp-action="LandingPage"
                   asp-route-type="Popular"
                   asp-fragment="courses-section"
                   role="tab"
                   aria-selected="@(type == "Popular")">
                    Popular Courses
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link @(type == "Demanding" ? "active" : "")"
                   asp-controller="LandingPage"
                   asp-action="LandingPage"
                   asp-route-type="Demanding"
                   asp-fragment="courses-section"
                   role="tab"
                   aria-selected="@(type == "Demanding")">
                    Most Demanding
                </a>
            </li>
        </ul>


        <!-- Tab panes -->
        <div class="tab-content">

            <!-- Popular Courses -->
            <div class="tab-pane fade show active" id="popular-courses" role="tabpanel" aria-labelledby="popular-tab">
                <div class="owl-carousel course-carousel position-relative">

                    @if (Model.popularOrDemandingCourseList.Count > 0)
                    {
                        @foreach (var couse in Model.popularOrDemandingCourseList)
                        {
                            <!-- item 1 -->
                            <div class="course-item bg-light">
                                <div class="position-relative overflow-hidden">
                                    <img class="img-fluid" src="@couse.CourseImage" alt="">
                                    <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                        <a class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end"
                                           style="border-radius: 30px 0 0 30px;" asp-controller="CourseList"
                                           asp-action="GetCourseDetails" asp-route-id="@couse.CourseDetailsId">Read More</a>
                                        <a class="flex-shrink-0 btn btn-sm btn-primary px-3"
                                           style="border-radius: 0 30px 30px 0;"
                                           asp-controller="video"
                                           asp-action="CoursePlayer" asp-route-id="@couse.CourseDetailsId">Join Now</a>
                                    </div>
                                </div>
                                <div class="text-center p-4 pb-0">
                                    <h3 class="mb-0">$@couse.CourseFees</h3>
                                    <div class="mb-3">
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small>(123)</small>
                                    </div>
                                    <h5 class="mb-4">@couse.CourseName</h5>
                                </div>
                                <div class="d-flex border-top">
                                    <small class="flex-fill text-center border-end py-2">
                                        <i class="fa fa-user-tie text-primary me-2"></i>@couse.CourseProvider
                                    </small>
                                    <small class="flex-fill text-center border-end py-2">
                                        <i class="fa fa-clock text-primary me-2"></i>@couse.Duration Hrs
                                    </small>
                                    <small class="flex-fill text-center py-2">
                                        <i class="fa fa-user text-primary me-2"></i>@couse.NoOfEnrollment Students
                                    </small>
                                </div>
                            </div>

                        }
                    }


                </div>
            </div>

            <!-- Most Demanding (you can copy same structure or keep static) -->
            <div class="tab-pane fade" id="demanding-courses" role="tabpanel" aria-labelledby="demanding-tab">
                <div class="owl-carousel course-carousel position-relative">
                    <!-- demanding courses items -->
                </div>
