@{
    ViewBag.Title = "Help Center";
    var faqs = ViewBag.FAQs as List<(string Q, string A)>;
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Help Center</h1>

    <!-- Search Bar -->
    <div class="row mb-4">
        <div class="col-md-8 offset-md-2">
            <input type="text" class="form-control" placeholder="Search for help articles or FAQs...">
        </div>
    </div>

    <!-- Categories -->
    <h3>Browse by Category</h3>
    <div class="row mt-3">
        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h5>Account</h5>
                <p>Profile, security, login issues</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h5>Billing</h5>
                <p>Payments, invoices, refunds</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h5>Technical Support</h5>
                <p>Errors, troubleshooting</p>
            </div>
        </div>
    </div>

    <!-- FAQ Section -->
    <h3 class="mt-5">Frequently Asked Questions</h3>
    <div class="accordion mt-3" id="faqAccordion">
        @for (int i = 0; i < faqs.Count; i++)
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading@i">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapse@i">
                        @faqs[i].Q
                    </button>
                </h2>

                <div id="collapse@i" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        @faqs[i].A
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Contact Support -->
    <div class="text-center mt-5">
        <h4>Still need help?</h4>
        <a href="/Help/Contact" class="btn btn-primary mt-2">Contact Support</a>
    </div>
</div>
}
