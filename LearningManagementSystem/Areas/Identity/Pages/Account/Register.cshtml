@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
<!-- MDB -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/9.1.0/mdb.min.css" rel="stylesheet" />

<link rel="stylesheet" href="https://code.jquery.com/ui/1.14.1/themes/base/jquery-ui.css">

<style>
    body {
        background-color: #f8f9fa;
    }

    .card-registration {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: 500;
    }

    .btn-warning {
        background-color: #f5b400;
        border: none;
        color: #fff;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .btn-warning:hover {
        background-color: #e0a200;
    }

    .btn-light {
        font-weight: 600;
    }

    .form-control {
        border-radius: 8px;
        padding: 0.75rem 1rem;
    }

    h3 {
        font-weight: 700;
    }

    /* Responsive */
    @@media(max-width: 992px) {
        .card-registration {
            transform: scale(1);
        }
    }
</style>

<section class="h-100">
    <div class="container py-5">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-10">
                <div class="card card-registration">
                    <div class="row g-0">
                        <!-- Left image -->
                        <div class="col-lg-5 d-none d-lg-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                                 alt="Registration image" class="img-fluid h-100"
                                 style="object-fit: cover;" />
                        </div>

                        <!-- Right form -->
                        <div class="col-lg-7">
                            <div class="card-body p-5 text-black">
                                <h3 class="mb-4 text-uppercase">Create Account To
                                <img src="~/img/webinar.png" style="height:40px; width:auto;" /> 
                                <span class="m-1">Edesphere</span> </h3>

                                <form method="post">
                                    <!-- Full Name -->
                                    <div class="mb-3">
                                        <label asp-for="Input.FullName" class="form-label">Full Name <span class="text-danger">*</span></label>
                                        <input asp-for="Input.FullName" class="form-control" />
                                        <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                                    </div>

                                    <!-- Age & Gender -->
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label asp-for="Input.Age" class="form-label">Age</label>
                                            <input asp-for="Input.Age" type="number" class="form-control" />
                                            <span asp-validation-for="Input.Age" class="text-danger small"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Gender <span class="text-danger">*</span></label>
                                            <div class="d-flex gap-3 mt-2">
                                                <div class="form-check">
                                                    <input asp-for="Input.Gender" class="form-check-input" type="radio" value="Female" id="female" />
                                                    <label class="form-check-label" for="female">Female</label>
                                                </div>
                                                <div class="form-check">
                                                    <input asp-for="Input.Gender" class="form-check-input" type="radio" value="Male" id="male" />
                                                    <label class="form-check-label" for="male">Male</label>
                                                </div>
                                                <div class="form-check">
                                                    <input asp-for="Input.Gender" class="form-check-input" type="radio" value="Other" id="other" />
                                                    <label class="form-check-label" for="other">Other</label>
                                                </div>
                                            </div>
                                            <span asp-validation-for="Input.Gender" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <!-- DOB & Contact -->
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label asp-for="Input.DateOfBirth" class="form-label">Date of Birth <span class="text-danger">*</span></label>
                                            <input asp-for="Input.DateOfBirth" type="text" class="form-control" id="datepicker" placeholder="DD/MM/YYYY" />
                                            <span asp-validation-for="Input.DateOfBirth" class="text-danger small"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label asp-for="Input.Contact" class="form-label">Contact <span class="text-danger">*</span></label>
                                            <input asp-for="Input.Contact" type="text" class="form-control" />
                                            <span asp-validation-for="Input.Contact" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <!-- Email -->
                                    <div class="mb-3">
                                        <label asp-for="Input.Email" class="form-label">Email <span class="text-danger">*</span></label>
                                        <input asp-for="Input.Email" type="email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                    </div>

                                    <!-- Password -->
                                    <div class="mb-3">
                                        <label asp-for="Input.Password" class="form-label">Password <span class="text-danger">*</span></label>
                                        <input asp-for="Input.Password" type="password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                    </div>

                                    <!-- Confirm Password -->
                                    <div class="mb-4">
                                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password <span class="text-danger">*</span></label>
                                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                    </div>

                                    <!-- Buttons -->
                                    <div class="d-flex justify-content-end gap-2">
                                        <button type="button" class="btn btn-info btn-lg px-4" onclick="window.location.href = '@Url.Page("/Account/Login")'">
                                            BACK
                                        </button>
                                        <button type="reset" class="btn btn-light btn-lg px-4"
                                                onclick="window.location.href='@Url.Page("/Account/Register")'">
                                            RESET
                                        </button>
                                        <button type="submit" class="btn btn-warning btn-lg px-4">
                                            SUBMIT
                                        </button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div> <!-- row -->
                </div> <!-- card -->
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://code.jquery.com/ui/1.14.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: "1900:2025",
                dateFormat: "dd/mm/yy"
            });
        });

        $("button[type='reset']").on("click", function (e) {
            e.preventDefault();
            const form = $(this).closest("form");
            form.find("input").val("");
            form.find(".text-danger").text("");
            form.find(".validation-summary-errors").empty();
            form.find(".input-validation-error").removeClass("input-validation-error");
            $("#datepicker").datepicker("setDate", null);
        });
    </script>
}
