@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

@*<h1>@ViewData["Title"]</h1>*@


<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet" />
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/9.1.0/mdb.min.css"
      rel="stylesheet" />

<link rel="stylesheet" href="https://code.jquery.com/ui/1.14.1/themes/base/jquery-ui.css">
<style>
    /* Keep layout same, just scale down */
    .card-registration {
        transform: scale(0.85); /* scale down to 85% */
        transform-origin: top center; /* scale from top */
    }
    /* Keep layout same, just scale down */
    .col {
        transform: scale(0.85); /* scale down to 85% */
        transform-origin: top center; /* scale from top */
    }
</style>

<section class="h-100">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-5 d-none d-xl-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                                 alt="Sample photo" class="img-fluid"
                                 style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        <div class="col-xl-7">
                            <div class="card-body p-md-5 text-black">
                                <h3 class="mb-5 text-uppercase">Create account</h3>

                                <form method="post">
                                    @* Full Name *@
                                    <div data-mdb-input-init class="form-outline mb-2">
                                        <input asp-for="Input.FullName" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="Input.FullName">Full Name</label>
                                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                                    </div>

                                    @* Age *@
                                    <div data-mdb-input-init class="form-outline mb-2">
                                        <input asp-for="Input.Age" type="number" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="Input.Age">Age</label>
                                        <span asp-validation-for="Input.Age" class="text-danger"></span>
                                    </div>

                                    @* Gender Radio Buttons *@
                                    <div class="d-md-flex justify-content-start align-items-center mb-4 py-2">
                                        <h6 class="mb-0 me-4">Gender: </h6>
                                        <div class="form-check form-check-inline mb-0 me-4">
                                            <input asp-for="Input.Gender" class="form-check-input" type="radio" value="Female" />
                                            <label class="form-check-label">Female</label>
                                        </div>
                                        <div class="form-check form-check-inline mb-0 me-4">
                                            <input asp-for="Input.Gender" class="form-check-input" type="radio" value="Male" />
                                            <label class="form-check-label">Male</label>
                                        </div>
                                        <div class="form-check form-check-inline mb-0">
                                            <input asp-for="Input.Gender" class="form-check-input" type="radio" value="Other" />
                                            <label class="form-check-label">Other</label>
                                        </div>
                                        <span asp-validation-for="Input.Gender" class="text-danger"></span>
                                    </div>

                                    @* Date of Birth *@
                                    <div class="form-group mb-2">
                                        <label class="form-label" asp-for="Input.DateOfBirth">Date of Birth</label>
                                        <input asp-for="Input.DateOfBirth" placeholder="DD/MM/YYYY" type="text" class="form-control form-control-lg" id="datepicker" />
                                        <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                                    </div>

                                    @* Contact *@
                                    <div data-mdb-input-init class="form-outline mb-2">
                                        <input asp-for="Input.Contact" type="text" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="Input.Contact">Contact</label>
                                        <span asp-validation-for="Input.Contact" class="text-danger"></span>
                                    </div>

                                    @* Email *@
                                    <div data-mdb-input-init class="form-outline mb-2">
                                        <input asp-for="Input.Email" type="email" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="Input.Email">Email</label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    @* Password *@
                                    <div data-mdb-input-init class="form-outline mb-2">
                                        <input asp-for="Input.Password" type="password" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="Input.Password">Password</label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    @* Confirm Password *@
                                    <div data-mdb-input-init class="form-outline mb-2">
                                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="Input.ConfirmPassword">Confirm Password</label>
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    @* Submit & Reset Buttons *@
                                    <div class="d-flex justify-content-end pt-3">
                                        <button type="reset" class="btn btn-light btn-lg">Reset all</button>
                                        <button type="submit" class="btn btn-warning btn-lg ms-2">Submit form</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://code.jquery.com/ui/1.14.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker({
                changeMonth: true,
                changeYear: true
            });
        });
    </script>
}

